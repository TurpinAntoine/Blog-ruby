<h3 class="center-align"><%= t('views.index.home.welcome') %></h3>

<h5 class="center-align"><%= t('views.index.home.id')%> <%= current_user.username %> </h5>

<h4 class="center-align"><%= t('views.index.home.latest') %></h4>



<div class="row">

  <% @jobs.last(4).reverse.each do |job| %>

  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= job.title %></span>
        <p><%= job.description %></p>
        <p><%= job.salaire_moyen %>â‚¬</p>
        <p><strong><%= job.company_name %></strong></p>
      </div>
      <div class="card-action">
        <%= link_to t('views.index.home.link'), job_path(job.id) %>
      </div>
    </div>
  </div>

  <% end %>

</div>



