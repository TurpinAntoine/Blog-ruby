<h3 class="center-align"><%= current_user == @user ? t('views.show.users.my') : "#{@user.username}'s jobs" %></h3>


<% @jobs.each do |job| %>

  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= job.title %></span>
        <p><%= job.description %></p>
        <p><%= job.salaire_moyen %>â‚¬</p>
        <p><strong><%= job.company_name %></strong></p>
      </div>
      <div class="card-action">
        <%= link_to t('views.show.users.link'), job_path(job.id) %>
      </div>
    </div>
  </div>

<% end %>